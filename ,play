#!/usr/bin/python3

"""
Plays a .cast file (generated by asciinema) on the commandline.
This script is used for the aesthetic of brevity.
That is to say, instead of `$ asciinema play file` the command becomes
`$ play file` 
"""

import argparse
import subprocess

parser = argparse.ArgumentParser()
parser.add_argument('file', help='The name of the asciinema file to play')
args = parser.parse_args()

file = args.file

command = f"""asciinema play {file}"""
subprocess.run(command, shell=True)
